---
import Layout from "../layouts/Layout.astro";
import LandingHeader from "../components/LandingHeader.astro";
import Section from "../components/Section.astro";
---

<Layout title="Tesla Web Clone">
  <LandingHeader />
  <main
    class="snap-y snap-mandatory relative w-full h-screen overflow-auto overflow-x-hidden"
  >
    <div class="snap-center">
      <Section
        title="Disfrute de tesla"
        subtitle="Programe una prueba de conduccion hoy mismo"
        color="white"
      >
        <div slot="footer">
          <a
            class="text-white border-[3px] border-white rounded font-medium px-12 py-2 text-sm hover:bg-white hover:text-black transition-colors backdrop-blur-md bg-white/5"
            href="#">Prueba de conduccion</a
          >
        </div>
        <div slot="underfooter">
          <a
            class="pb-4 text-sm flex flex-col flex-grow justify-end invisible"
            href="#"
            >hola
          </a>
        </div>
        <video
          slot="background"
          autoplay
          muted
          loop
          src="https://digitalassets.tesla.com/tesla-contents/video/upload/f_auto,q_auto/Homepage-Demo-Drive-Desktop-NA.mp4"
        ></video>
      </Section>
    </div>
    <div class="snap-center">
      <Section
        title="Model Y"
        subtitle="Concertar una prueba de conduccion"
        color="black"
        isUnderline = "underline"
      >
        <div slot="footer">
          <a
            class="text-white border-[3px] border-gray-800 rounded font-medium px-12 py-2 text-sm bg-gray-800 mr-3 ml-3"
            href="#">Explorar inventario</a
          >

          <a
            class="text-black border-[3px] border-gray-100 rounded font-medium px-12 py-2 text-sm bg-gray-100 mr-3 ml-3"
            href="#">Pedido personalizado</a
          >
        </div>
        <div slot="underfooter">
          <a class="pb-4 text-sm flex flex-col flex-grow justify-end" href="#"
            ><u>Disponible con Moves III</u></a
          >
        </div>
        <img
          slot="background"
          alt="Model Y"
          class="h-full w-screen object-cover object-center bg-image"
          src="https://digitalassets.tesla.com/tesla-contents/image/upload/h_2400,w_2880,c_fit,f_auto,q_auto:best/Homepage-Model-Y-Global-Desktop"
        />
      </Section>
    </div>
    <div class="snap-center">
      <Section
        title="Model 3"
        subtitle="Concertar una prueba de conduccion"
        color="black"
        isUnderline = "underline"
      >
        <div slot="footer">
          <a
            class="text-white border-[3px] border-gray-800 rounded font-medium px-12 py-2 text-sm bg-gray-800 mr-3 ml-3"
            href="#">Explorar inventario</a
          >

          <a
            class="text-black border-[3px] border-gray-100 rounded font-medium px-12 py-2 text-sm bg-gray-100 mr-3 ml-3"
            href="#">Pedido personalizado</a
          >
        </div>
        <div slot="underfooter">
          <a class="pb-4 text-sm flex flex-col flex-grow justify-end" href="#"
            ><u>Disponible con Moves III</u></a
          >
        </div>
        <img
          slot="background"
          alt="Model 3"
          class="h-full w-screen object-cover object-center bg-image"
          src="https://digitalassets.tesla.com/tesla-contents/image/upload/h_2560,w_4096,c_fit,f_auto,q_auto:best/Homepage-Model-3-Desktop-LHD"
        />
      </Section>
    </div>
    <div class="snap-center">
      <Section
        title="Model S"
        subtitle="Programe una consulta virtual"
        color="black"
        isUnderline = "underline"
      >
        <div slot="footer">
          <a
            class="text-white border-[3px] border-gray-800 rounded font-medium px-12 py-2 text-sm bg-gray-800 mr-3 ml-3"
            href="#">Explorar inventario</a
          >

          <a
            class="text-black border-[3px] border-gray-100 rounded font-medium px-12 py-2 text-sm bg-gray-100 mr-3 ml-3"
